{
  "name": "javascript-refresh",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node index.js",
    "tsc": "tsc",
    "build": "npm-run-all --parallel tsc copy",
    "copy": "ts-node copyStaticAssets.ts",
    "ts-dev": "nodemon src/local-server.ts",
    "dev2": "set NODE_ENV=development&set NODE_SCOPE=local&npm-run-all --parallel ts-dev watch-sass",
    "watch-sass": "sass --watch src\\public\\stylesheets:dist\\public\\stylesheets",
    "b-node": "esbuild app.jsx --outfile=output.js --bundle --loader:.ts=ts --external:./node_modules/* --platform=node",
    "bbbb": "esbuild app.jsx --bundle --platform=node --target=node10.4  --external:./node_modules/*",
    "b": "esbuild app.jsx --chunk-names=chunks/[name]-[hash] --bundle --outdir=out/server --splitting --platform=node --target=node10.4  --external:./node_modules/* --format=esm  --watch",
    "n": "npm-run-all -p build-dev run-server",
    "run-server": "nodemon -e jsx --exec \"node ./out/server/app.js\"",
    "str": "esbuild app.jsx --chunk-names=chunks/[name]-[hash] --bundle --outdir=out --splitting --platform=node --target=node10.4  --external:./node_modules/* --format=esm --servedir=out",
    "client-dev-build": "esbuild client.entry.jsx --bundle --minify --splitting --sourcemap --target=chrome58 --outdir=out/client --format=esm --watch",
    "build-dev": "node esbuild.config.cjs"
  },
  "type": "module",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "create-serve": "^1.0.1",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "esbuild": "^0.14.39",
    "express": "^4.17.3",
    "express-ejs-layouts": "^2.5.1",
    "highlight.js": "^11.5.1",
    "ip": "^1.1.8",
    "marked": "^4.0.14",
    "mongoose": "^6.3.4",
    "preact": "^10.7.2",
    "preact-render-to-string": "^5.2.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "serverless-http": "^3.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.27",
    "connect-livereload": "^0.6.1",
    "esbuild-dev-server": "^0.3.0",
    "esbuild-serve": "^1.0.1",
    "livereload": "^0.9.3",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.50.1",
    "shelljs": "^0.8.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  }
}
