{
  "name": "javascript-refresh",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node out/server/app.js",
    "tsc": "tsc",
    "build": "npm-run-all -s client:build server:build copy",
    "copy": "ts-node copyStaticAssets.ts",
    "client:dev": "set NODE_ENV=development&node config/client.build.js",
    "client:build": "node config/client.build.js",
    "server:build": "node config/server.build.js",
    "ts-dev": "set NODE_ENV=development&set NODE_SCOPE=local&nodemon src/local-server.ts",
    "dev": "set NODE_ENV=development&set NODE_SCOPE=local&npm-run-all -p client:dev ts-dev",
    "browser:sync": "browser-sync start --config bs-config.js",
    "dev3": "etsc"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "create-serve": "^1.0.1",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "esbuild": "^0.14.39",
    "esbuild-node-tsc": "^1.8.5",
    "esbuild-sass-plugin": "^2.2.6",
    "express": "^4.17.3",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.17.3",
    "highlight.js": "^11.5.1",
    "marked": "^4.0.14",
    "mongoose": "^6.3.4",
    "preact": "^10.7.2",
    "preact-lazy-route": "^1.0.1",
    "preact-router": "^4.0.1",
    "react": "^18.1.0",
    "react-router-dom": "^6.3.0",
    "react-textarea-autosize": "^8.3.4",
    "react-transition-group": "^4.4.2",
    "serverless-http": "^3.0.1",
    "ts-node": "^10.8.0",
    "wouter": "^2.8.0-alpha.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.27",
    "browser-sync": "^2.27.10",
    "connect-livereload": "^0.6.1",
    "livereload": "^0.9.3",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "preact-async-route": "^2.2.1",
    "sass": "^1.50.1",
    "shelljs": "^0.8.5",
    "typescript": "^4.6.3"
  }
